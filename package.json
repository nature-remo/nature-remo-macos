{
  "name": "nature-remo-macos",
  "description": "Nature Remo for macOS",
  "version": "1.0.0",
  "author": {
    "name": "Yasuaki Uechi",
    "email": "y@uechi.io",
    "url": "https://uechi.io"
  },
  "main": "public/electron.js",
  "scripts": {
    "build": "craco build",
    "dev:cra": "BROWSER=none craco start",
    "dev:electron": "wait-on http://localhost:3000 && electron .",
    "eject": "craco eject",
    "package": "build -mw",
    "postinstall": "electron-builder install-app-deps",
    "prepackage": "yarn build",
    "start": "run-p dev:*",
    "test": "craco test"
  },
  "dependencies": {
    "@craco/craco": "^5.2.3",
    "@types/react": "^16.8.23",
    "electron-is-dev": "^1.1.0",
    "nature-remo": "^1.0.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-icons": "^3.7.0",
    "react-router-dom": "^5.0.1",
    "react-scripts": "3.0.1",
    "react-tippy": "^1.2.3",
    "styled-components": "^4.3.2"
  },
  "devDependencies": {
    "@types/history": "^4.7.2",
    "@types/react-dom": "^16.8.4",
    "@types/react-router-dom": "^4.3.4",
    "@types/styled-components": "^4.1.16",
    "electron": "^5.0.6",
    "electron-builder": "^20.44.4",
    "husky": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1",
    "typescript": "^3.5.2",
    "wait-on": "^3.3.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "io.uechi.nature-remo-macos",
    "productName": "Nature Remo",
    "copyright": "Copyright Â© 2019 ${author}",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "homepage": ".",
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "license": "MIT",
  "private": true
}
