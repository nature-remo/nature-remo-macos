{
  "name": "nature-remo-macos",
  "description": "Nature Remo for macOS",
  "version": "1.0.0",
  "author": {
    "name": "Yasuaki Uechi",
    "email": "y@uechi.io"
  },
  "scripts": {
    "build": "craco build && electron-builder --dir",
    "dev": "concurrently -k 'npm:dev:*'",
    "dev:cra": "BROWSER=none craco start",
    "dev:electron": "wait-on http://localhost:3000 && electron .",
    "eject": "craco eject",
    "package": "electron-builder -m",
    "postinstall": "electron-builder install-app-deps",
    "prepackage": "npm run build",
    "start": "npm run dev",
    "test": "craco test"
  },
  "dependencies": {
    "@craco/craco": "^5.6.4",
    "@types/react": "^16.9.45",
    "electron-is-dev": "^1.2.0",
    "nature-remo": "^1.2.3",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-icons": "^3.10.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "3.4.1",
    "react-tippy": "^1.4.0",
    "styled-components": "^5.1.1"
  },
  "devDependencies": {
    "@types/history": "^4.7.7",
    "@types/react-dom": "^16.9.8",
    "@types/react-router-dom": "^5.1.5",
    "@types/styled-components": "^5.1.2",
    "concurrently": "^5.3.0",
    "electron": "^9.2.0",
    "electron-builder": "^22.8.0",
    "husky": "^4.2.5",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "typescript": "^3.9.7",
    "wait-on": "^5.1.0"
  },
  "main": "public/electron.js",
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "homepage": "https://github.com/uetchy/nature-remo-macos",
  "license": "Apache-2.0",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "io.uechi.nature-remo-macos",
    "productName": "Nature Remo",
    "copyright": "Copyright Â© 2020 ${author}",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "files": [
      "node_modules/",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "private": true
}
