{
  "name": "nature-remo-macos",
  "description": "Nature Remo for macOS",
  "version": "0.1.0",
  "author": {
    "name": "Yasuaki Uechi",
    "email": "y@uechi.io"
  },
  "scripts": {
    "build": "concurrently 'npm:build:*'",
    "build:main": "cross-env NODE_ENV=production webpack --config webpack.main.js",
    "build:renderer": "cross-env NODE_ENV=production webpack --config webpack.renderer.js",
    "clean": "shx rm -rf artifacts dist *.log",
    "dev": "concurrently -k 'npm:dev:*'",
    "dev:electron": "wait-on dist/main.js http://localhost:8090 && electron .",
    "dev:main": "webpack --config webpack.main.js --watch",
    "dev:renderer": "webpack-dev-server --config webpack.renderer.js",
    "package": "electron-builder -m",
    "postinstall": "electron-builder install-app-deps",
    "prepackage": "npm run clean && npm run build",
    "release": "release-it"
  },
  "main": "dist/main.js",
  "build": {
    "appId": "io.uechi.${name}",
    "productName": "Nature Remo",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "files": [
      "dist"
    ],
    "directories": {
      "output": "artifacts",
      "buildResources": "buildResources"
    }
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "nature-remo": "^2.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-icons": "^4.3.1",
    "react-router-dom": "^6.2.2",
    "react-tippy": "^1.4.0",
    "styled-components": "^5.3.3",
    "update-electron-app": "^2.0.1"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^4.2.2",
    "@types/history": "^5.0.0",
    "@types/node": "^17.0.21",
    "@types/react": "^17.0.41",
    "@types/react-dom": "^17.0.14",
    "@types/react-router-dom": "^5.3.3",
    "@types/styled-components": "^5.1.24",
    "concurrently": "^7.0.0",
    "copy-webpack-plugin": "^10.2.4",
    "cross-env": "^7.0.3",
    "electron": "^18.3.7",
    "electron-builder": "^22.14.13",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^7.0.4",
    "nodemon": "^2.0.15",
    "prettier": "^2.6.0",
    "pretty-quick": "^3.1.3",
    "release-it": "^14.13.1",
    "shx": "^0.3.4",
    "ts-loader": "^9.2.8",
    "typescript": "^4.6.2",
    "wait-on": "^6.0.1",
    "webpack": "^5.70.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.7.4",
    "webpackbar": "^5.0.2"
  },
  "homepage": "https://github.com/nature-remo/nature-remo-macos",
  "repository": {
    "type": "git",
    "url": "git://github.com/nature-remo/nature-remo-macos"
  },
  "license": "Apache-2.0",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "private": true
}
